{
  "name": "Minecraft AI Builder",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "settings": {
    "terminal.integrated.defaultProfile.linux": "bash",
    "python.pythonPath": "/workspace/.venv/bin/python"
  },
  "postCreateCommand": "/workspace/.venv/bin/pip install -r requirements.txt",
  "customizations": {
    "vscode": {
      "extensions": ["ms-python.python"]
    }
  },
  "remoteUser": "root"
}
